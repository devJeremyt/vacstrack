<%-include("../partials/header.ejs")%>
<main>
    <div class="container">
        <form action="/users/edit" method="post">
            <input type="text" name="id" id="id" value="<%=employee.persKey%>" hidden>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="firstName">First Name*</label>
                        <input name="firstName" type="text" class="form-control" id="firstName" value="<%=employee.firstName%>" required>
                    </div>  
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label for="lastName">Last Name*</label>
                        <input name="lastName" type="text" class="form-control" id="lastName" value="<%=employee.lastName%>" required>
                    </div>
                </div>
                <div class="col-MD-4">
                    <div class="form-group">
                        <label for="active">Active</label>
                        <input name="active" type="checkbox" class="form-control" id="active" <%=(employee.active == 1 ? 'checked' : "")%>>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-4">
                    <label for="email">Email</label>
                    <input name="email" type="email" class="form-control" value="<%=employee.email%>">
                </div>
                <div class="form-group col-lg-4">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" autocomplete="off" value="<%=employee.password%>" <%=user.type != 'Administrator' ? "disabled" : ''%>>
                </div>
                <div class="form-group col-lg-3">
                    <label for="employeeType">Type of Employee*</label>
                    <select name="employeeType" class="form-control" id="employeeType" required
                    <%=user.type != 'Administrator' ? "disabled" : ''%>
                    <%=employee.type == 'Administrator' ? 'options.selectedIndex = 0' : 'options.selectedIndex = 2'%>
                    >
                        <option>Standard</option>
                        <option>Administrator</option>
                        <option>HR Representative</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <div class="form-group">
                        <label for="streetAddress">Street Address*</label>
                        <input name="streetAddress" type="text" class="form-control" id="streetAddress" value="<%=employee.street%>" required>
                    </div>
                </div>
            </div>      
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="city">City*</label>
                        <input name="city" type="text" class="form-control" id="city" value="<%=employee.city%>" required>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="state">State*</label>
                        <input name="state" type="text" class="form-control" id="state" value="<%=employee.state%>" required>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="zip">Zip*</label>
                        <input name="zip" type="text" class="form-control" id="zip" value="<%=employee.zip%>" required>
                    </div>
                </div> 
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <label for="homePhone">Home Phone</label>
                        <input name="homePhone" type="text" class="form-control" id="homePhone" value="<%=employee.homePhone%>" required>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label for="mobilePhone">Mobile Phone*</label>
                        <input name="mobilePhone" type="text" class="form-control" id="mobilePhone" value="<%=employee.mobilePhone%>" required> 
                    </div>
                </div>  
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</main>
<%-include("../partials/footer.ejs")%>