<%-include("../partials/header.ejs")%>

<main>
<div class="container">
    <h1 class="center">Records Needing approval</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Approve</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Vaccine</th>
                <th scope="col">Dose Number</th>
            </tr>
        </thead>
        <tbody>
            <%for(let i = 0; i < records.length; i++){ %>
                <tr>
                    <td><a href="/records/markApproved?recordId=<%=records[i].recordID%>">Approve</a> / <a href="/records/specificrecord?recordId=<%=records[i].recordID%>">View</a></td>
                    <td><%=records[i].firstName%></td>
                    <td><%=records[i].lastName%></td>
                    <td><%=records[i].vacsName%></td>
                    <td><%=records[i].doseNumber%></td>
                </tr>
            <%}%>
        </tbody>
    </table>
</div>
</main>

<%-include("../partials/footer.ejs")%>
