<%-include("./partials/header.ejs")%>
<main>
    <div class="container">
        <form action="/problem" method="post">
            <section class="form-group">
                <label for="email">Email</label>
                <input id="email" name="email" type="text" class="form-control col-md-3">
            </section>
            <section class="form-group">
                <label for="subject">Subject</label>
                <input id="subject" name="subject" type="text" class="form-control col-md-6">
            </section>
            <section class="form-group">
                <label for="message">Message</label>
                <textarea id="message" name="message" type="text" class="form-control col-md-6" rows="8" cols="70"></textarea>
            </section>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
</main>

<%-include("./partials/footer.ejs")%>